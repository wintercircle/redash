{
  "name": "Redash",
  "scripts": {
    "postdeploy": "REDASH_DATABASE_URL=$DATABASE_URL REDASH_REDIS_URL=$REDISCLOUD_URL /app/manage.py database create_tables"
  },
  "env": {
    "REDASH_LOG_LEVEL": {
      "description": "Redash log level",
      "value": "INFO",
      "required": false
    },
    "REDASH_COOKIE_SECRET": {
      "description": "The secret key to use in the Flask app for various cryptographic features",
      "generator": "secret"
    },
    "REDASH_MAIL_SERVER": {
      "value": "email-smtp.us-east-1.amazonaws.com",
      "required": false
    },
    "REDASH_MAIL_PORT": {
      "value": "25",
      "required": false
    },
    "REDASH_MAIL_USE_TLS": {
      "value": "true",
      "required": false
    },
    "REDASH_MAIL_USERNAME": {
      "required": false
    },
    "REDASH_MAIL_PASSWORD": {
      "required": false
    },
    "REDASH_MAIL_DEFAULT_SENDER": {
      "required": false
    },
    "REDASH_GOOGLE_CLIENT_ID": {
      "required": false
    },
    "REDASH_GOOGLE_CLIENT_SECRET": {
      "required": false
    }
  },
  "formation": {
    "web": {
      "quantity": 1,
      "size": "free"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:hobby-dev",
      "options": {
        "version": "12"
      }
    },
    {
      "plan": "rediscloud:30"
    }
  ],
  "buildpacks": [
    {
      "url": "heroku/python"
    },
    {
      "url": "heroku/nodejs"
    }
  ]
}
